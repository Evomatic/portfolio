---
interface Props {
	label: string;
	href: string;
	ariaLabel: string;
	width: number;
	height: number;
}

const { label, href, ariaLabel, width, height } = Astro.props;
---

<a class="button" style=`padding: ${height}px ${width}px;` aria-label={ariaLabel} href={href}
	>{label}</a
>
<style>
	.button {
		display: inline-block;
		transition: all 0.5s ease;
		border: solid var(--grayish-dark-blue) 1px;
		color: var(--grayish-dark-blue);
		font-size: var(--xs-small-font);
		letter-spacing: 0.1rem;
		text-decoration: none;
		text-transform: uppercase;
	}

	.button:hover {
		background-color: var(--grayish-dark-blue);
		color: var(--very-light-grey);
	}

	@media (hover: none) {
		.button:focus {
			background-color: var(--grayish-dark-blue);
			color: var(--very-light-grey);
		}
	}
</style>
