---
import { Icon } from 'astro-icon/components';
---

<footer>
	<nav id="footer-container" aria-label="footer site map">
		<ul class="site-map-container">
			<li>
				<ul class="nav-container">
					<li><a aria-label="link to top of page" href="#"><Icon name="logo-light" /></a></li>
					<li><a aria-label="link to top of page" href="/">home</a></li>
					<li><a aria-label="link to projects page" href="/projects">projects</a></li>
					<li><a aria-label="link to contact page" href="/contact-me">contact me</a></li>
				</ul>
			</li>
			<li>
				<ul class="social-media">
					<li>
						<a
							href="https://github.com/evomatic"
							target="_blank"
							rel="noopener noreferrer"
							aria-label="link to github"><Icon name="github-light" /></a
						><li>
							<a href="#" aria-label="link to twitter" target="_blank" rel="noopener noreferrer"
								><Icon name="twitter-light" /><li>
									<a
										href="https://www.linkedin.com/in/evantrujillo/"
										aria-label="link to linkedin"
										target="_blank"
										rel="noopener noreferrer"><Icon name="linkedin-light" /></a
									>
								</li></a
							>
						</li>
					</li>
				</ul>
			</li>
		</ul>
	</nav>
</footer>
<style>
	footer {
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
	}

	#footer-container {
		display: flex;
		justify-content: center;
		align-items: center;
		width: calc(100% - 14%);
		min-height: 354px;
		font-size: var(--xs-small-font);
		letter-spacing: 0.1rem;
		text-transform: uppercase;
	}

	#footer-container li {
		list-style-type: none;
	}

	#footer-container ul {
		padding-left: 0px;
	}

	.site-map-container {
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		align-items: center;
		min-height: 242px;
	}

	.site-map-container li a {
		color: var(--very-light-grey);
		text-decoration: none;
	}

	.nav-container {
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		gap: 20px;
	}

	.nav-container li:nth-child(1) {
		height: 32px;
	}

	.social-media {
		display: flex;
		align-items: center;
		gap: 16px;
	}

	.social-media li:nth-child(odd) {
		height: 24px;
	}

	.social-media li:nth-child(2) {
		height: 19px;
	}

	@media (hover: hover) {
		.site-map-container li a:hover {
			transition: color 0.3s ease;
			color: var(--slightly-desaturated-cyan);
		}
	}
	@media (hover: none) {
		.site-map-container li a:focus {
			color: var(--slightly-desaturated-cyan);
		}
	}

	@media (min-width: 768px) {
		footer {
			min-height: 80px;
		}

		#footer-container {
			width: calc(100% - 55px);
			min-height: 80px;
		}
		.site-map-container {
			flex-direction: row;
			margin: 0px;
			width: 100%;
			min-height: 80px;
		}

		.nav-container {
			flex-direction: row;
			justify-content: flex-start;
			gap: 40px;
			min-width: 481px;
		}
	}
	@media (min-width: 768px) {
		#footer-container {
			height: 80px;
		}
	}
	@media (min-width: 1024px) {
		#footer-container {
			max-width: 1056px;
		}

		.nav-container {
			gap: 60px;
		}
	}
</style>
