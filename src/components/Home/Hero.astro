---
import mobileHeroImage from '../../images/homepage/mobile/image-homepage-hero.jpg';
import tabletHeroImage from '../../images/homepage/tablet/image-homepage-hero.jpg';
import desktopHeroImage from '../../images/homepage/desktop/image-homepage-hero.jpg';
import CustomPicture from '../CustomPicture.astro';
import AboutMeButton from './AboutMeButton.astro';
---

<div class="hero">
	<CustomPicture
		mobileImgSpecs={{ src: mobileHeroImage }}
		tabletImgSpecs={{ src: tabletHeroImage, width: 713 }}
		desktopImgSpecs={{ src: desktopHeroImage, width: 1056 }}
		alt="Image from a project used as the Hero image."
	/>

	<div class="header-and-button">
		<h2>Hey, I'm Evan Trujillo and I love building beautiful websites</h2><AboutMeButton
			class="about-me-button"
		/>
	</div>
</div>

<style>
	.hero {
		display: flex;
		flex-direction: column;
		margin-bottom: 120px;
	}
	h2 {
		max-width: 400px;
	}

	.about-me-button {
		display: none !important;
	}

	@media (min-width: 768px) {
		h2 {
			padding-top: 20px;
		}
		.header-and-button {
			display: flex;
			position: absolute;
			top: 444px;
			flex-direction: column;
			background-color: var(--very-light-grey);
			width: 514px;
			height: 278px;
		}

		.about-me-button {
			display: inline-flex !important;
			margin-top: auto;
		}
	}

	@media (min-width: 1024px) {
		.hero {
			margin-bottom: 100px;
		}
		h2 {
			margin-bottom: 0;
			padding-top: 10px;
			font-size: var(--h1-font);
			line-height: var(--h1-line-height);
			letter-spacing: var(--h1-letter-spacing);
		}
		.header-and-button {
			top: 331px;
			width: 420px;
			height: 340px;
		}
	}
</style>
