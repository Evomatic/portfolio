---
import { getImage } from 'astro:assets';
import type { ImageSpec } from '~/lib/interfaces';
interface Props {
	mobileImageSpec: ImageSpec;
	tabletImageSpec: ImageSpec;
	desktopImageSpec: ImageSpec;
	alt: string;
	class?: string;
	width?: string;
}

const {
	class: className,
	mobileImageSpec,
	tabletImageSpec,
	desktopImageSpec,
	alt,
	width,
	...rest
} = Astro.props;

const mobileImg = await getImage({
	...mobileImageSpec,
	format: 'webp',
	fallbackFormat: 'jpg',
});

const tabletImg = await getImage({
	...tabletImageSpec,
	format: 'webp',
	fallbackFormat: 'jpg',
});

const desktopImg = await getImage({
	...desktopImageSpec,
	format: 'webp',
	fallbackFormat: 'jpg',
});
---

<picture class={className} {...rest}>
	<source
		class={className}
		media="(max-width: 767px)"
		srcset={mobileImg.src}
		type="image/jpg"
	/>
	<source
		class={className}
		media="(max-width: 1023px)"
		srcset={tabletImg.src}
		type="image/jpg"
	/>
	<source
		class={className}
		media="(min-width: 1024px)"
		srcset={desktopImg.src}
		type="image/jpg"
	/>
	<img width={width} src={mobileImg.src} alt={alt} />
</picture>
