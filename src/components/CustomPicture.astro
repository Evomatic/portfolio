---
import { getImage } from 'astro:assets';

interface ImgSpecs {
	src: string | ImageMetadata;
	height?: number;
	width?: number;
}
interface Props {
	mobileImgSpecs: ImgSpecs;
	tabletImgSpecs: ImgSpecs;
	desktopImgSpecs: ImgSpecs;
	alt: string;
}

const { mobileImgSpecs, tabletImgSpecs, desktopImgSpecs, alt } = Astro.props;

const mobileImg = await getImage({
	...mobileImgSpecs,
	format: 'webp',
});

const tabletImg = await getImage({
	...tabletImgSpecs,
	format: 'webp',
});

const desktopImg = await getImage({
	...desktopImgSpecs,
	format: 'webp',
});
---

<picture>
	<source media="(max-width: 767px)" srcset={mobileImg.src} />
	<source media="(max-width: 1023px)" srcset={tabletImg.src} />
	<source media="(min-width: 1024px)" srcset={desktopImg.src} />
	<img src={mobileImg.src} alt={alt} />
</picture>
