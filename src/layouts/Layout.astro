---
import { AstroFont } from 'astro-font';
import Footer from '~/components/Footer.astro';
import Navbar from '~/components/Navigation/Navbar.astro';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta property="og:title" content={title} />
		<meta name="description" content="Evan Trujillo's Software Engineer portfolio website." />
		<meta
			property="og:description"
			content="Evan Trujillo's Software Engineer portfolio website."
		/>
		<AstroFont
			config={[
				{
					src: [],
					name: 'Ibarra Real Nova',
					googleFontsURL:
						'https://fonts.googleapis.com/css2?family=Ibarra+Real+Nova:ital,wght@0,400..700;1,400..700&display=swap',
					preload: true,
					display: 'swap',
					selector: 'body',
					fallback: 'sans-serif',
				},
				{
					src: [],
					name: 'Public Sans',
					googleFontsURL: 'https://fonts.googleapis.com/css2?family=Public+Sans:400,400i',
					preload: true,
					display: 'swap',
					selector: 'body',
					fallback: 'sans-serif',
				},
			]}
		/>
	</head>
	<body>
		<header>
			<Navbar />
		</header>
		<main>
			<div class="layout-container">
				<slot />
			</div>
		</main>
		<Footer />
		<style is:global>
			:root {
				/* primary colors */
				--slightly-desaturated-cyan: hsl(167, 36%, 54%);
				--dark-blue: hsl(205, 41%, 21%);
				--grayish-dark-blue: hsl(245, 10%, 22%);

				/* secondary colors */
				--very-light-grey: hsl(0, 0%, 98%);
				--light-grey-text-field: hsl(240, 2%, 92%);
				--bright-red-errors: hsl(0, 90%, 57%);

				/* action colors */
				--primary-normal-color: var(--dark-blue);
				--primary-hover-color: var(--slightly-desaturated-cyan);

				--secondary-normal-color: var(hsl(0, 0%, 100%));
				--secondary-hover-color: var(--grayish-dark-blue);

				/* font */
				--xs-small-font: 0.75rem;
				--small-font: 0.938rem;
				--medium-font: 1rem;
				--h1-font: 3.125rem;
				--h2-font: 2.5rem;
				--h3-font: 2rem;

				/* body */
				--body-line-height: 30px;

				/* header */
				--h1-line-height: 50px;
				--h2-line-height: 42px;
				--h3-line-height: 36px;

				--h1-letter-spacing: -0.45px;
				--h2-letter-spacing: -0.36px;
				--h3-letter-spacing: -0.29px;
			}

			html {
				scroll-behavior: smooth;
			}
			body {
				margin: 0;
				background-color: var(--grayish-dark-blue);
				padding: 0;
				font-size: var(--small-font);
				line-height: var(--body-line-height);
				font-family: 'Public Sans', sans-serif;
			}
			h1,
			h2,
			h3 {
				color: var(--grayish-dark-blue);
				font-family: 'Ibarra Real Nova', sans-serif;
			}

			h1,
			h2 {
				font-weight: bold;
			}

			h1 {
				font-size: var(--h1-font);
				line-height: var(--h1-line-height);
				letter-spacing: var(--h1-letter-spacing);
			}

			h2 {
				font-size: var(--h2-font);
				line-height: var(--h2-line-height);
				letter-spacing: var(--h2-letter-spacing);
			}

			h3 {
				font-size: var(--h3-font);
				line-height: var(--h3-line-height);
				letter-spacing: var(--h3-letter-spacing);
			}

			header {
				display: flex;
				justify-content: center;
				align-items: center;
				background-color: var(--very-light-grey);
				max-width: 100%;
			}

			main {
				background-color: var(--very-light-grey);
			}

			.layout-container {
				margin-inline: auto;
				background-color: var(--very-light-grey);
				max-width: 1111px;
				min-height: calc(100vh - 70px);
			}
		</style>
	</body>
</html>
