---
import Layout from '~/layouts/Layout.astro';
import ContactMeShared from '~/components/ContactMeShared.astro';
import ProjectDetails from '~/components/Projects/ProjectDetails.astro';

export function getStaticPaths() {
	return [
		{ params: { project: 'manage' } },
		{ params: { project: 'bookmark' } },
		{ params: { project: 'insure' } },
		{ params: { project: 'fylo' } },
	];
}

const { project } = Astro.params;
---

<Layout title={`${project} project details.`}>
	<div class="page-wrapper">
		<ProjectDetails />
		<ContactMeShared />
	</div>
</Layout>

<style>
	.page-wrapper {
		margin-inline: auto;
		padding-right: 1.7rem;
		padding-left: 1.7rem;
	}
</style>
